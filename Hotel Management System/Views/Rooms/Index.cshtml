@model IEnumerable<Hotel_Management_System.Models.Room>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string ActionName = GlobalVariables.VIEWSHANDLER().ToString();
}

<br />
<div class="container container-fluid">
    <div class="row">
        @*<p>
            @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "btn btn-danger mr-1" })
        </p>
        <p>
            @Html.ActionLink("Update Customers", ActionName, "Customers", new { area = "" }, new { @class = "btn btn-success mr-1" })
            @Html.ActionLink("Update Customer's Contacts", ActionName, "Customer_s_Phone_No_s", new { area = "" }, new { @class = "btn btn-success mr-1" })
        </p>*@
        <p>
            @Html.ActionLink("Create New", "Create", new { area = "" }, new { @class = "btn btn-success mr-1" })
        </p>
        <div class="container search-table">
            <div class="search-box">
                <div class="row">
                    <div class="col-md-6">
                        <center>
                            <h5 style="margin-top: 8px;">Search All Fields of Table's Data:</h5>
                        </center>
                    </div>
                    <div class="col-md-6">
                        <input type="text" id="myInput" onkeyup="myFunction()" class="form-control" placeholder="Search all fields of table's data">
                        <script>
                            $(document).ready(function () {
                                $("#myInput").on("keyup", function () {
                                    var value = $(this).val().toLowerCase();
                                    $("#myTable tr").filter(function () {
                                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                                    });
                                });
                            });
                        </script>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table id="myTable" class="table table-dark table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Room_Category)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Rent)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Reservation.Reservation_ID)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Room_Category)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Reservation.Reservation_ID)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Room_No }, new { @class = "btn btn-primary mr-1" })
                                    @Html.ActionLink("Details", "Details", new { id = item.Room_No }, new { @class = "btn btn-warning mr-1" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Room_No }, new { @class = "btn btn-danger mr-1" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <p>
                @Html.ActionLink("Back-to-Main-Customers-List", ActionName, "CUSTOMERS_VIEW", new { area = "" }, new { @class = "btn btn-primary" })
            </p>
        </div>
    </div>
</div>