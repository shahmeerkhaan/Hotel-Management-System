@model IEnumerable<Hotel_Management_System.Models.EMPLOYEES_VIEW>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string ActionName = GlobalVariables.VIEWSHANDLER().ToString();
}
<br />
<div class="container container-fluid">
    <div class="row">
        @*<p>
            @Html.ActionLink("Manage Customers", ActionName, "CUSTOMERS_VIEW", new { area = "" }, new { @class = "btn btn-primary mr-1" })
            @Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "btn btn-danger mr-1" })
        </p>*@
        <h2>
            Want to update Employees's Data?
        </h2>
        <p>
            @Html.ActionLink("Update Employees", ActionName, "Employees", new { area = "" }, new { @class = "btn btn-success mr-1" })
        </p>
        <div class="container search-table">
            <div class="search-box">
                <div class="row">
                    <div class="col-md-6">
                        <center>
                            <h5 style="margin-top: 8px;">Search All Fields of Table's Data:</h5>
                        </center>
                    </div>
                    <div class="col-md-6">
                        <input type="text" id="myInput" onkeyup="myFunction()" class="form-control" placeholder="Search all fields of table's data">
                        <script>
                            $(document).ready(function () {
                                $("#myInput").on("keyup", function () {
                                    var value = $(this).val().toLowerCase();
                                    $("#myTable tr").filter(function () {
                                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                                    });
                                });
                            });
                        </script>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table id="myTable" class="table table-dark table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Employee_First_name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Employee_Last_name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Username)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Password)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Employee_Department)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Employee_Address)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Employee_Salary)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Employee_Contact_No_s)
                            </th>
                            <th>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee_First_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee_Last_name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee_Department)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee_Address)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee_Salary)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee_Contact_No_s)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.Employee_ID }, new { @class = "btn btn-warning mr-1" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>